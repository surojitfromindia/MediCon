<UserControl x:Class="ProjectIFPossible.MiniWindows.OpendWindowElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectIFPossible.MiniWindows"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="180">
    <Grid x:Name="Back" Background="#FF238DD4" Height="30" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtWindowname" Padding="5,0,0,0"  Grid.Column="0" Text="Empty Medicine Stock Window" Foreground="White" VerticalAlignment="Center" TextTrimming="WordEllipsis" TextWrapping="Wrap" MouseDown="txtWindowname_MouseDown"/>
        <TextBlock x:Name="btnClose"  Grid.Column="1" Text="x" Foreground="White" HorizontalAlignment="Center"  VerticalAlignment="Center" FontFamily="Montserrat Medium" FontSize="16" MouseDown="btnClose_MouseDown"/>
    </Grid>
</UserControl>
