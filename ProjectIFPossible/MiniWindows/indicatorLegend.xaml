<UserControl x:Class="ProjectIFPossible.MiniWindows.indicatorLegend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectIFPossible.MiniWindows"
             mc:Ignorable="d" 
             d:DesignHeight="30" Width="170">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Ellipse Name="inc" Margin="5,0,0,0" VerticalAlignment="Center" Grid.Column="0" Width="10" Height="10" Fill="{Binding FillBrush}" HorizontalAlignment="Left"/>
        <TextBlock Foreground="{Binding foreColor}" Text="{Binding text}" VerticalAlignment="Center" Padding="0" Grid.Column="1" />
    </Grid>
</UserControl>
