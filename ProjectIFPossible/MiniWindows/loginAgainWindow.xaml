<Window x:Class="ProjectIFPossible.MiniWindows.loginAgainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectIFPossible.MiniWindows"
        mc:Ignorable="d"
        Title="Log in Again" Height="170" Width="240">
    <StackPanel Margin="10">
        <TextBlock Text="User Name"/>
        <TextBox Text="{Binding Path=user}" Width="212" HorizontalAlignment="Left" Margin="0,3,0,0"/>
        <TextBlock Text="Password" Margin="0,7,0,0"/>
        <PasswordBox  Width="212" HorizontalAlignment="Left" Margin="0,3,0,0"/>
        <Button Content="Connect" Click="Button_Click" Margin="0,10,0,0" FontSize="10" Padding="5" HorizontalAlignment="Right" BorderThickness="0" Width="70"/>
    </StackPanel>
</Window>
